.DEFAULT_GOAL := help
.PHONY: help sh sh-all sh-commit yaml yaml-all yaml-commit md md-all md-commit html html-all html-commit secrets secrets-all links

help:
	@echo "Testing Commands"
	@echo "================"
	@echo ""
	@echo "Test all files:"
	@echo "  make test sh              - Run shellcheck on all shell scripts"
	@echo "  make test yaml            - Run yamllint on all YAML files"
	@echo "  make test md              - Run pymarkdown on all Markdown files"
	@echo "  make test html            - Run html5lib on all HTML files"
	@echo "  make test secrets         - Run detect-secrets on all files"
	@echo "  make test links           - Check critical internal links"
	@echo ""
	@echo "Test committed files:"
	@echo "  make test sh-commit       - Run shellcheck on shell scripts in last commit"
	@echo "  make test yaml-commit     - Run yamllint on YAML files in last commit"
	@echo "  make test md-commit       - Run pymarkdown on Markdown files in last commit"
	@echo "  make test html-commit     - Run html5lib on HTML from changed files"
	@echo ""
	@echo "More info:"
	@echo "  See ADR-004 for testing requirements"

sh:
	@echo "ğŸ” Running shellcheck on all shell scripts..."
	@if [ -f ../../.venv/bin/shellcheck ]; then \
		cd ../.. && find scripts -name "*.sh" -type f -exec .venv/bin/shellcheck --format=gcc {} +; \
		echo "âœ… Shellcheck complete"; \
	elif command -v shellcheck >/dev/null 2>&1; then \
		cd ../.. && find scripts -name "*.sh" -type f -exec shellcheck --format=gcc {} +; \
		echo "âœ… Shellcheck complete"; \
	else \
		echo "âŒ shellcheck not found"; \
		echo "Run 'make hooks setup' to install locally"; \
		exit 1; \
	fi

sh-all: sh

sh-commit:
	@echo "ğŸ” Running shellcheck on shell scripts in last commit..."
	@if [ -f ../../.venv/bin/shellcheck ]; then \
		cd ../.. && shell_files=$$(git diff-tree --no-commit-id --name-only -r HEAD | grep '\.sh$$'); \
		if [ -n "$$shell_files" ]; then \
			echo "$$shell_files" | xargs .venv/bin/shellcheck --format=gcc && echo "âœ… Shellcheck passed" || echo "âŒ Shellcheck found issues"; \
		else \
			echo "â„¹ï¸  No shell scripts in last commit"; \
		fi; \
	elif command -v shellcheck >/dev/null 2>&1; then \
		cd ../.. && shell_files=$$(git diff-tree --no-commit-id --name-only -r HEAD | grep '\.sh$$'); \
		if [ -n "$$shell_files" ]; then \
			echo "$$shell_files" | xargs shellcheck --format=gcc && echo "âœ… Shellcheck passed" || echo "âŒ Shellcheck found issues"; \
		else \
			echo "â„¹ï¸  No shell scripts in last commit"; \
		fi; \
	else \
		echo "âŒ shellcheck not found"; \
		echo "Run 'make hooks setup' to install locally"; \
		exit 1; \
	fi

yaml:
	@echo "ğŸ” Running yamllint on all YAML files..."
	@if [ -f ../../.venv/bin/yamllint ]; then \
		cd ../.. && find . -name "*.yml" -o -name "*.yaml" | grep -v ".venv" | xargs .venv/bin/yamllint -c .github/yamllint-config.yml; \
		echo "âœ… Yamllint complete"; \
	else \
		echo "âŒ yamllint not found"; \
		echo "Run 'make hooks setup' to install locally"; \
		exit 1; \
	fi

yaml-all: yaml

yaml-commit:
	@echo "ğŸ” Running yamllint on YAML files in last commit..."
	@if [ -f ../../.venv/bin/yamllint ]; then \
		cd ../.. && yaml_files=$$(git diff-tree --no-commit-id --name-only -r HEAD | grep -E '\.(yml|yaml)$$'); \
		if [ -n "$$yaml_files" ]; then \
			echo "$$yaml_files" | xargs .venv/bin/yamllint -c .github/yamllint-config.yml && echo "âœ… Yamllint passed" || echo "âŒ Yamllint found issues"; \
		else \
			echo "â„¹ï¸  No YAML files in last commit"; \
		fi; \
	else \
		echo "âŒ yamllint not found"; \
		echo "Run 'make hooks setup' to install locally"; \
		exit 1; \
	fi

md:
	@echo "ğŸ” Running pymarkdown on all Markdown files..."
	@if [ -f ../../.venv/bin/pymarkdown ]; then \
		cd ../.. && find . -name "*.md" | grep -v ".venv" | xargs .venv/bin/pymarkdown --config .pymarkdownlnt scan; \
		echo "âœ… Pymarkdown complete"; \
	else \
		echo "âŒ pymarkdown not found"; \
		echo "Run 'make hooks setup' to install locally"; \
		exit 1; \
	fi

md-all: md

md-commit:
	@echo "ğŸ” Running pymarkdown on Markdown files in last commit..."
	@if [ -f ../../.venv/bin/pymarkdown ]; then \
		cd ../.. && md_files=$$(git diff-tree --no-commit-id --name-only -r HEAD | grep '\.md$$'); \
		if [ -n "$$md_files" ]; then \
			echo "$$md_files" | xargs .venv/bin/pymarkdown --config .pymarkdownlnt scan && echo "âœ… Pymarkdown passed" || echo "âŒ Pymarkdown found issues"; \
		else \
			echo "â„¹ï¸  No Markdown files in last commit"; \
		fi; \
	else \
		echo "âŒ pymarkdown not found"; \
		echo "Run 'make hooks setup' to install locally"; \
		exit 1; \
	fi

html:
	@echo "ğŸ” Running HTML validation on all files..."
	@if [ -f ../../.venv/bin/python ]; then \
		cd ../.. && .venv/bin/python scripts/validate-html.py website/public; \
	elif command -v python3 >/dev/null 2>&1; then \
		cd ../.. && python3 scripts/validate-html.py website/public; \
	else \
		echo "âŒ Python not found"; \
		echo "Run 'make hooks setup' to install locally"; \
		exit 1; \
	fi

html-all: html

html-commit:
	@echo "ğŸ” Running HTML validation on changed files..."
	@if [ -f ../../.venv/bin/python ]; then \
		cd ../.. && chmod +x scripts/test-html.sh && scripts/test-html.sh changed; \
	elif command -v python3 >/dev/null 2>&1; then \
		cd ../.. && chmod +x scripts/test-html.sh && scripts/test-html.sh changed; \
	else \
		echo "âŒ Python not found"; \
		echo "Run 'make hooks setup' to install locally"; \
		exit 1; \
	fi

secrets:
	@echo "ğŸ” Running detect-secrets on all files..."
	@if [ -f ../../.venv/bin/detect-secrets ]; then \
		cd ../.. && .venv/bin/detect-secrets scan; \
	else \
		echo "âŒ detect-secrets not found"; \
		echo "Run 'make hooks setup' to install locally"; \
		exit 1; \
	fi

secrets-all: secrets

links:
	@echo "ğŸ”— Checking critical internal links..."
	@if [ -f ../../scripts/pre-push-link-checker.sh ]; then \
		cd ../.. && chmod +x scripts/pre-push-link-checker.sh && scripts/pre-push-link-checker.sh; \
	else \
		echo "âŒ Link checker script not found"; \
		exit 1; \
	fi
