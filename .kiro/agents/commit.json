{
  "name": "commit",
  "description": "Git workflow specialist for commits, staging, proper commit messages, and pushing to remote",
  "prompt": null,
  "tools": [
    "read",
    "write",
    "shell",
    "introspect"
  ],
  "allowedTools": ["read", "write", "shell"],
  "resources": [
    "file://.kiro/instructions/commit.md",
    "file://CONTRIBUTING.md",
    "file://AGENTS.md"
  ],
  "toolsSettings": {
    "read": {
      "allowedPaths": ["./**"]
    },
    "write": {
      "allowedPaths": ["CHANGELOG.md"]
    },
    "shell": {
      "autoAllowReadonly": true,
      "allowedCommands": ["git status", "git diff.*", "git add.*", "git commit.*", "git push.*", "git log.*", "git tag.*", "gh pr.*", "scripts/bump-version.sh.*"]
    }
  }
}
