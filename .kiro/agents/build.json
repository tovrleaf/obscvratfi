{
  "name": "build",
  "description": "Builder agent for implementing code, running commands, and making changes",
  "prompt": null,
  "tools": [
    "read",
    "write",
    "shell",
    "introspect"
  ],
  "allowedTools": ["read", "write", "shell"],
  "resources": [
    "file://.kiro/instructions/build.md",
    "file://README.md",
    "file://AGENTS.md",
    "file://website/hugo.toml"
  ],
  "toolsSettings": {
    "read": {
      "allowedPaths": ["./**"]
    },
    "write": {
      "allowedPaths": ["./**"],
      "deniedPaths": [".git/**", "docs/adr/**"]
    },
    "shell": {
      "autoAllowReadonly": true,
      "allowedCommands": ["make .*", "hugo .*", "git status", "git diff.*", "git mv.*", "mv.*", "mkdir.*"]
    }
  }
}
